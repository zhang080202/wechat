.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #777;
  text-align: center;
  line-height: 80rpx;
  background-color: white;
  margin-top: 3rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
  color: #777;
}

.on {
  color: #0099CC;
  border-bottom: 5rpx solid #0099CC;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.page-body {
  height: 100%;
}
.page-body-item {
  height: 120rpx;
  width: 100%;
  /* display: flex; */
  background-color: white;
  margin-top: 5rpx;
  overflow: hidden;
}
.page-body-irow {
  overflow: hidden;
}
.page-body-item-cnetent {
  height: 100%;
  width: 70%;
  display: table;
  overflow: hidden; 
}
.page-body-item-image {
  color: #A8A8A8;
  font-size: 25rpx;
  line-height: 120rpx;
}
.page-body-item-image-status_1{
  color: #A8A8A8;
}
.page-body-item-image-status_2{
  color: #780000;
}
.page-body-item-image-status_3 {
  color: green;
}
.page-body-item-image-status {
  margin-left: 15rpx;
}

