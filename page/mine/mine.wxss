.page-body-item-cnetent-label {
  font-family: 'Times New Roman', Times, serif;
  font-weight: 700;
  font-size: 30rpx;
  /* line-height: 150rpx; */
}
/*一行或多行均居中*/
.page-body-item-cnetent-label > view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 150rpx;
}

.page-body-item-navigator {
  height: 100%;
  width: 100%;
}

.page-body-item-navigator-view {
  display: flex;
  height: 100%;
  width: 100%;
}

.col-class {
  border-top: 1rpx solid rgb(230, 223, 223);
  height: 50rpx;
  line-height: 50rpx;
  background-color: white;
  color: black;
  font-size: 25rpx;
  font-family: sans-serif;
}

.page-neck-irow {
  border-top: 1rpx solid rgb(238, 232, 232);
  border-bottom: 1rpx solid rgb(238, 232, 232);
  height: 60rpx;
  line-height: 60rpx;
}

.page-neck-type {
  /* display: none; */
  z-index: -1;
  position: absolute;
  background-color: white;
  font-size: 25rpx;
  font-family: sans-serif;
  opacity: 0;
  transition: opacity 0.3s linear;
}

.showType {
  z-index: 100;
  opacity: 1;
  /* display: block; */
  transition: opacity 0.3s linear;
}

.showColor {
  color: #09c;
}

