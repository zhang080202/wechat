<view class='container'>
  <view class='page-head'>
    <swiper indicator-dots='{{indicatorDots}}' autoplay='{{autoplay}}' interval='{{interval}}' duration='{{duration}}' circular='{{circular}}' indicator-active-color='{{indicatorColor}}'>
      <block wx:for='{{imgUrls}}' wx:key='*this'>
        <swiper-item>
          <image class='page-head-image' src='{{item}}' mode='widthFix'></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  
  <scroll-view class='page-body' scroll-y='true' enable-back-to-top='true' scroll-with-animation='true'>
    <block wx:for='{{list}}'>
      <view class='page-body-item'>
        <navigator class='page-body-item-navigator' url='detail/detail?articleId={{item.articleId}}'>
          <view class='page-body-item-navigator-view'>
            <view class='page-body-item-cnetent'>
              <label class='page-body-item-cnetent-label'>{{item.title}}</label>
            </view>
            <view class='page-body-item-image'>
              <image class='page-body-image' src='{{item.accessImage}}' mode='cnetent'></image>
            </view>
            <!-- <block wx:if='{{item.accessImage == null}}'>
              <image class='page-body-image' src='../../image/default.jpg' mode='cover'></image>
            </block> -->
          </view>             
        </navigator>
      </view>
    </block>
  </scroll-view>
</view>
